@inherits BlazorStateComponent

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
    @if (!string.IsNullOrEmpty(accountState.Account.Email))
    {
        <MudNavGroup Title="Account" Expanded="true" >
            <MudNavLink Href="/Account/PaymentMethods"  Match="NavLinkMatch.Prefix">Payment Methods</MudNavLink>
        </MudNavGroup>
    }
    else
    {
        <MudNavLink Href="/Account/Login" Match="NavLinkMatch.Prefix">Login</MudNavLink>
    }
    </MudNavMenu>
