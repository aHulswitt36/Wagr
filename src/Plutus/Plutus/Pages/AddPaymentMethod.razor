<input @bind="Name" placeholder="Cardholder Name"/>
<br/>
<input @bind="Address1" placeholder="Address 1"/>
<br/>
<input @bind="Address2" placeholder="Address 2"/>
<br/>
<input @bind="City" placeholder="City"/>
<br/>
<input @bind="District" placeholder="State/Province"/>
<br/>
<input @bind="PostalCode" placeholder="PostalCode"/>
<br/>
<input @bind="Country" placeholder="Country Code"/>
