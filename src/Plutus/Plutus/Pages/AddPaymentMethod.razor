<input @bind="CVV" placeholder="CVV" type='number' id="cvv"/>
<br/>
 
<input @bind="ExpMonth" placeholder="Exp Month" type="number" min="1" max="12" maxlength="2"/> <input @bind="ExpYear" placeholder="Exp Year" type="number" min="2021" maxlength="4"/>
